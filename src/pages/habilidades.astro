<div class="index_container">
  <h3 class="title">Habilidades</h3>

  {
    (Object.keys(habilidades) as (keyof HabilidadesObj)[]).map((e) => {
      const itensCategoria: Habilidade[] = habilidades[e];
      return (
        <div class="habilidades_container">
          <h2 class="habilidades_title">{e}</h2>
          <div class="habilidades_wrapper">
            {itensCategoria.map((element) => {
              return (
                <div class="habilidade_container">
                  <i class={element.icon + " habilidade_icon"} />
                  <p class="habilidade_name">{element.name}</p>
                </div>
              );
            })}
          </div>
        </div>
      );
    })
  }
</div>

