import Particles from "astro-particles"
import type { ISourceOptions } from "tsparticles-engine";
import Projetos from './projetos.astro';

export const options: ISourceOptions = {
	fullScreen:{
		enable:false,
		zIndex: 1,
	},
	background:{
		color: "#000000",
		opacity: 0.1
	},
    particles: {
        number: {
            value:60,
        },
		reduceDuplicates:true,
        links: {
            distance: 95,
            enable: true,
            triangles: {
                enable: true,
                opacity: 0.05,

            },

        },
        move: {
            enable: true,
            speed: 2,
        },
        size: {
            value: 1,
        },
        shape: {
            type: "circle",
        },
    },
	interactivity:{
		events:{
			onHover:{
				enable:true,
				mode: ["attract","grab"],
				
			}
		}
	}
};
